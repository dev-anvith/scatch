<%- include('./partials/header') %>

    
            <div class="min-h-screen flex flex-col">
                <div class="container px-10 py-20 flex flex-grow">
                    
                    <main class="w-3/4 bg-white p-8 shadow ml-4">
                        <h2 class="text-3xl font-bold mb-4">Settings</h2>
                        <form autocomplete="off" action="/users/settings" method="post" enctype="multipart/form-data">
                            <div class="mb-6">
                                <h3 class="text-lg font-semibold mb-2">Personal Details</h3>
                                <div class="mb-4">
                                    <label class="block mb-2 font-medium">Profile Image</label>
                                    <input name="image" type="file" class="py-2 px-4 rounded" value="Select File">
                                </div>
                                <div class="grid grid-cols-2 gap-4">
                                    <input name="contact" type="number" placeholder="Phone Number"
                                        class="border p-2 rounded w-full">
                                    <input name="email" type="text" placeholder="email"
                                        class="border p-2 rounded w-full">
                                </div>
                            </div>

                           
                            <input class="px-5 py-2 rounded mt-3 bg-blue-500 text-white" type="submit"
                                value="Update Profile">
                        </form>
                    </main>
                </div>
            </div>
            <%- include('./partials/footer') %>